<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/message_item">

    <com.airbnb.ui.RoundedImageView
        android:id="@+id/hostImage"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:layout_toEndOf="@id/hostImage"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="14sp"
        tools:text="abc def ghi jkl mno pqr stu vwx yz"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="24sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical|end"
        android:textColor="#8c8c8c"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/host_name"
        android:layout_width="wrap_content"
        android:layout_height="24sp"
        android:layout_alignEnd="@id/date"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/hostImage"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/status_and_listing_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_toEndOf="@id/hostImage"
        android:textSize="10sp"
        android:textStyle="bold"
        tools:ignore="SmallSp"/>
</merge>