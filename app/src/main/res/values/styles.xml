<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryDark">#353535</item>
        <item name="colorAccent">#c43b52</item>
        <item name="android:textColor">#7c7c7c</item>
        <item name="android:textColorPrimary">#565656</item>
        <item name="android:textColorSecondary">?android:attr/textColor</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorAccent">#ff545d</item>
        <item name="android:colorEdgeEffect">#747474</item>
    </style>

    <style name="DrawerItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:paddingLeft">36dp</item>
        <item name="android:text">@string/invite_friends</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DrawerItem.Light" parent="DrawerItem">
        <item name="android:background">@drawable/drawer_item_light_ripple</item>
        <item name="android:textColor">#ff222222</item>
    </style>

    <style name="DrawerItem.Dark" parent="DrawerItem">
        <item name="android:background">@drawable/drawer_item_dark_ripple</item>
        <item name="android:textColor">#ffeeeeee</item>
    </style>

</resources>
